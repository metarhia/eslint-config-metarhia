{
  "name": "eslint-config-metarhia",
  "version": "2.0.0",
  "description": "ESLint config for Metarhia projects",
  "main": "index.js",
  "scripts": {
    "commitmsg": "commitlint -e",
    "lint": "npm run -s lint-js && npm run -s lint-md",
    "lint-js": "eslint .",
    "lint-md": "remark --quiet .",
    "test": "npm run -s lint",
    "test-ci": "npm test && ./scripts/lint-commit-ci.sh",
    "precommit": "npm test",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/eslint-config-metarhia.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "lint",
    "linter",
    "config",
    "preset",
    "metarhia"
  ],
  "author": "Alexey Orlenko <eaglexrlnk@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metarhia/eslint-config-metarhia/issues"
  },
  "homepage": "https://github.com/metarhia/eslint-config-metarhia#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^5.1.1",
    "@commitlint/config-angular": "^4.3.0",
    "eslint": "^4.12.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-metarhia": "^1.0.2",
    "standard-version": "^4.2.0"
  },
  "peerDependencies": {
    "eslint": "^4.12.0",
    "eslint-plugin-import": "^2.7.0"
  }
}
