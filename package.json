{
  "name": "eslint-config-metarhia",
  "version": "9.0.0",
  "author": "Alexey Orlenko <eaglexrlnk@gmail.com>",
  "license": "MIT",
  "description": "ESLint config for Metarhia projects",
  "keywords": [
    "eslint",
    "eslintconfig",
    "lint",
    "linter",
    "config",
    "preset",
    "metarhia"
  ],
  "main": "index.js",
  "files": ["rules/", "scripts/"],
  "engines": {
    "node": "20 || 21 || 22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/eslint-config-metarhia.git"
  },
  "bugs": {
    "url": "https://github.com/metarhia/eslint-config-metarhia/issues"
  },
  "homepage": "https://metarhia.com",
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/tshemsedinov"
  },
  "scripts": {
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\"",
    "test": "npm run -s lint"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  }
}
